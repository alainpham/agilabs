<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:cxf="http://camel.apache.org/schema/cxf"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
       http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
       ">

    <camelContext id="kafka-consumer" xmlns="http://camel.apache.org/schema/spring">

		<rest id="restsvc"  path="/restsvc">
			<get id="get-ping" uri="/ping">
				<route id="get-pring-route">
					<setBody>
						<method ref="myTransformer" />
					</setBody>
				</route>
			</get>
		</rest>

        <route id="kafka-consumer-route">
            <from id="kafka-consumer-starter" uri="{{kafka.endpoint}}"/>
            <log message="${body}"/>
            <to uri="undertow:ws://{{server.address}}:7123/camel/events?sendToAll=true"></to>
        </route>

    </camelContext>

</beans>